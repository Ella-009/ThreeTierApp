@model IEnumerable<DataAccessLayer.Models.UserModel>
@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enter</title>
</head>
<body>
    <div style="background-color: white; border-radius: 3%; margin-left: 20%; margin-right: 20%; margin-top: 10%; padding: 10%; text-align: center">

        <table class="table">
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email Address</th>
                <th></th>
            </tr>

            @foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>

